<Window x:Class="ActorsApplication.AddPlace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActorsApplication"
        mc:Ignorable="d"
        Title="Добавить место проведения" Height="198" Width="378">
    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="81"/>
        <TextBox Name="TitleTextBlock" HorizontalAlignment="Left" Margin="80,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="21"/>
        <Label Content="Адрес" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="81"/>
        <TextBox Name="AddressTextBlock" HorizontalAlignment="Left" Margin="80,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="21"/>
        <Label Content="Количество мест" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="104"/>
        <TextBox Name="PlacesCountTextBlock" HorizontalAlignment="Left" Margin="119,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="21"/>
        <Button Name="OkBtn" Content="ОК" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Width="46" Click="OkBtn_Click"/>

    </Grid>
</Window>
